<div class="donation">
  <div id="spacer"></div>

  <div class="row">
    <div class="col-lg-12 main-content-feature text-center">
      <h1><%= @campaign.name %></h1>
      <h3><%= @campaign.description %></h3>
    </div>
  </div>

  <%= form_tag("/campaign/iframe/#{@campaign.id}", :class => 'donate-form col-lg-12', :method => "post") do %>
      <div class="main-content-feature text-center">
        <iframe width="600" height="300" frameborder="0" src = "<%= @checkout_uri %>"/>
      </div>
  <% end %>
